# ============================================================
# Lipana TPS Configuration
# Copy this file to .env and fill in the values
# ============================================================

# --- Application ---
APP_HOST=0.0.0.0
APP_PORT=8100
LOG_LEVEL=info

# --- API Security ---
# Comma-separated list of valid API keys
# Generate keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=change-me-generate-a-real-key

# --- Tazama TMS Connection ---
# The URL of your Tazama TMS service
TMS_BASE_URL=http://gateway.tazama.svc.cluster.local:3000
TMS_TIMEOUT=30

# --- PostgreSQL: Evaluation Database ---
EVAL_DB_HOST=postgres.tazama.svc.cluster.local
EVAL_DB_PORT=5432
EVAL_DB_NAME=evaluation
EVAL_DB_USER=postgres
EVAL_DB_PASSWORD=postgres

# --- PostgreSQL: Configuration Database ---
CONFIG_DB_HOST=postgres.tazama.svc.cluster.local
CONFIG_DB_PORT=5432
CONFIG_DB_NAME=configuration
CONFIG_DB_USER=postgres
CONFIG_DB_PASSWORD=postgres

# --- PostgreSQL: Event History Database ---
EVENT_DB_HOST=postgres.tazama.svc.cluster.local
EVENT_DB_PORT=5432
EVENT_DB_NAME=event_history
EVENT_DB_USER=postgres
EVENT_DB_PASSWORD=postgres

# --- Default Tenant ---
DEFAULT_TENANT_ID=DEFAULT
